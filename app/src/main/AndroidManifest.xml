<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cheikh.mymvvm">

    <application
        android:name=".KusdomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TransitionActivity" android:theme="@style/splashTheme">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".ui.oschina.OschinaActivity"/>
        <activity android:name=".ui.oschinadetail.OsChinaDetailActivity"/>
        <activity android:name=".ui.account.register.AccountRegisterActivity"/>
        <activity android:name=".ui.account.center.AccountCenterActivity"/>
        <activity android:name=".ui.category.CategoryActivity"/>
        <activity android:name=".ui.account.center.AccountOrderListActivity"/>
        <activity android:name=".ui.account.center.collect.AccountCollectListActivity"/>
        <activity android:name=".ui.login.LoginActivty"/>
        <activity android:name=".ui.search.SearchActivty"/>
        <activity android:name=".ui.index.IndexActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>